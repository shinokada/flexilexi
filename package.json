{
	"name": "flexilexi",
	"version": "0.1.20",
	"description": "A library to facilitate dynamic and flexible searching within a dataset.",
	"main": "dist/index.js",
	"author": {
		"name": "Shinichi Okada",
		"email": "connect@codewithshin.com",
		"url": "https://blog.codewithshin.com"
	},
	"bugs": "https://github.com/shinokada/flexilexi/issues",
	"homepage": "https://flexilexi.codewithshin.com/",
	"license": "MIT",
	"scripts": {
		"dev": "vite dev",
		"build": "vite build && npm run package",
		"preview": "vite preview",
		"package": "svelte-kit sync && svelte-package && publint",
		"prepublishOnly": "npm run package",
		"test": "npm run test:integration && npm run test:unit",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "prettier --check . && eslint .",
		"format": "prettier --write .",
		"test:integration": "playwright test",
		"test:unit": "vitest",
		"copy:package": "svelte-lib-helpers package",
		"package:publish": "standard-version && npm run package && npm run copy:package && npm run format && git push --follow-tags origin main && npm publish",
		"changeset:version": "changeset version",
		"changeset:publish": "changeset publish"
	},
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"svelte": "./dist/index.js"
		}
	},
	"engines": {
		"npm": ">=7.0.0",
		"node": ">=18.0.0"
	},
	"files": [
		"dist",
		"!dist/**/*.test.*",
		"!dist/**/*.spec.*"
	],
	"peerDependencies": {
		"fuse.js": "^7.0.0",
		"svelte": "^5.0.0"
	},
	"devDependencies": {
		"@changesets/changelog-github": "^0.5.0",
		"@changesets/cli": "^2.27.7",
		"@playwright/test": "^1.45.1",
		"@sveltejs/adapter-auto": "^3.2.2",
		"@sveltejs/kit": "^2.5.18",
		"@sveltejs/package": "^2.3.2",
		"@sveltejs/vite-plugin-svelte": "^3.1.1",
		"@svitejs/changesets-changelog-github-compact": "^1.1.0",
		"@types/eslint": "8.56.10",
		"autoprefixer": "^10.4.19",
		"eslint": "^9.6.0",
		"eslint-config-prettier": "^9.1.0",
		"eslint-plugin-svelte": "2.39.0",
		"fuse.js": "^7.0.0",
		"postcss": "^8.4.39",
		"prettier": "^3.3.2",
		"prettier-plugin-svelte": "^3.2.5",
		"prettier-plugin-tailwindcss": "^0.6.5",
		"publint": "^0.2.8",
		"runatics": "^0.1.3",
		"runes-meta-tags": "^0.3.2",
		"svelte": "5.0.0-next.178",
		"svelte-5-ui-lib": "^0.4.13",
		"svelte-check": "^3.8.4",
		"svelte-lib-helpers": "^0.4.6",
		"tailwind-merge": "^2.4.0",
		"tailwindcss": "^3.4.4",
		"tslib": "^2.6.3",
		"typescript": "^5.5.3",
		"vite": "^5.3.3",
		"vitest": "^1.6.0"
	},
	"svelte": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"type": "module",
	"keywords": [
		"svelte 5",
		"fuse.js",
		"dictionary",
		"fuzzy",
		"search"
	],
	"repository": {
		"type": "git",
		"url": "https://github.com/shinokada/flexilexi"
	}
}
