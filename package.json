{
  "name": "flexilexi",
  "version": "0.1.22",
  "description": "A library to facilitate dynamic and flexible searching within a dataset.",
  "main": "dist/index.js",
  "author": {
    "name": "Shinichi Okada",
    "email": "connect@codewithshin.com",
    "url": "https://blog.codewithshin.com"
  },
  "bugs": "https://github.com/shinokada/flexilexi/issues",
  "homepage": "https://flexilexi.codewithshin.com/",
  "license": "MIT",
  "scripts": {
    "dev": "vite dev",
    "build": "vite build && npm run package",
    "preview": "vite preview",
    "package": "svelte-kit sync && svelte-package && publint",
    "prepublishOnly": "npm run package",
    "test": "npm run test:integration && npm run test:unit",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "lint": "prettier --check . && eslint .",
    "format": "prettier --write .",
    "test:integration": "playwright test",
    "test:unit": "vitest",
    "copy:packagejson": "svelte-lib-helpers package",
    "gen:exports": "svelte-lib-helpers exports",
    "gen:docs5": "svelte-lib-helpers docs5",
    "lib-helpers": "npm run gen:docs5 && npm run package && npm run gen:exports && npm run copy:packagejson",
    "cv": "npx changeset version",
    "cp": "npx changeset publish"
  },
  "engines": {
    "npm": ">=7.0.0",
    "node": ">=18.0.0"
  },
  "files": [
    "dist",
    "!dist/**/*.test.*",
    "!dist/**/*.spec.*"
  ],
  "peerDependencies": {
    "fuse.js": "^7.0.0",
    "svelte": "^5.0.0"
  },
  "devDependencies": {
    "@changesets/changelog-github": "^0.5.0",
    "@changesets/cli": "^2.27.8",
    "@playwright/test": "^1.47.0",
    "@sveltejs/adapter-auto": "^3.2.4",
    "@sveltejs/kit": "^2.5.26",
    "@sveltejs/package": "^2.3.4",
    "@sveltejs/vite-plugin-svelte": "^3.1.2",
    "@svitejs/changesets-changelog-github-compact": "^1.1.0",
    "@types/eslint": "9.6.0",
    "autoprefixer": "^10.4.20",
    "eslint": "^9.10.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-svelte": "2.43.0",
    "fuse.js": "^7.0.0",
    "postcss": "^8.4.45",
    "prettier": "^3.3.3",
    "prettier-plugin-svelte": "^3.2.6",
    "prettier-plugin-tailwindcss": "^0.6.6",
    "publint": "^0.2.10",
    "runatics": "^0.1.3",
    "runes-meta-tags": "^0.3.2",
    "svelte": "5.0.0-next.244",
    "svelte-5-ui-lib": "^0.9.5",
    "svelte-check": "^3.8.6",
    "svelte-lib-helpers": "^0.4.8",
    "tailwind-merge": "^2.5.2",
    "tailwindcss": "^3.4.10",
    "tslib": "^2.7.0",
    "typescript": "^5.5.4",
    "vite": "^5.4.3",
    "vitest": "^2.0.5"
  },
  "svelte": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "type": "module",
  "keywords": [
    "svelte 5",
    "fuse.js",
    "dictionary",
    "fuzzy",
    "search"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/shinokada/flexilexi"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "svelte": "./dist/index.js"
    },
    "./FlexiLexi.svelte": {
      "types": "./dist/FlexiLexi.svelte.d.ts",
      "svelte": "./dist/FlexiLexi.svelte"
    },
    "./package.json": "./package.json"
  }
}